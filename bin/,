#!/usr/bin/env -S bash
# -*- mode: sh -*-

ext=${1##*.}
functions=("$(compgen -A function)")
name=${0##*/}
realname=$(readlink "$name")
# xargs -0a /proc/$$/cmdline
parent=$(readlink /proc/$PPID/exe)
# set -x
# pushd "${1%/*}" || exit
# GIT_DIR="$(git rev-parse --show-toplevel)"
# ${GIT_DIR:-unset GIT_DIR}
# realpath /proc/$$/fd/0 >&2

# compgen -A function >&2
shopt -s extglob

function isGit() {
    git rev-parse --show-toplevel &>/dev/null
}

function runPlay {
    # export ANSIBLE_HOME=$HOME/ansible
    # export ANSIBLE_STDOUT_CALLBACK=yaml
    # export ANSIBLE_FORCE_COLOR=1
    # export ANSIBLE_
    # export ANSIBLE_INVENTORY=inventory/
    export ANSIBLE_DEBUG=0
    export ANSIBLE_VERBOSITY=0
    # export ANSIBLE_INVENTORY_PLUGIN_SCRIPT_STDERR=true
    export ANSIBLE_CONFIG=ffs.cfg

    gitdir="${1%/*}"
    pushd "$gitdir"

    if pushd "$(git rev-parse --show-toplevel)"; then
        if test 1 -eq  $(yq '..|select(has("become")).become' "$1"); then
            pass _ansible/become | tee fifo > /dev/null &
            export ANSIBLE_PASSWORD_FILE=fifo
        fi
            ansible-playbook $(realpath --relative-base="$_" "$1")
        return

        # echo pwd: $PWD

    else
        ansible-playbook "$1"
    fi

}


shebang=$(sed -E 1\!d "$@")
notify-send --expire-time 5000 "$0" "$parent:$name:$@"


case $name in
    SUDO_ASKPASS|sudo-askpass)
        pass local
    ;;
    ,)
        case $parent in
            *alacritty*)
                # TODO
            ;;
            *ansible*)
                echo "$@"
            ;;
            *incron*)
                # TODO
                ;;
            *cronie*)
                # TODO
                :
                ;;
            *fzf*)
                highlight -O ansi --force
                ;;
            *emacs*)
                case $shebang in
                    *python)
                        python "$@"
                        ;;
                    *)
                esac

                if isGit; then
                    echo $GIT_DIR
                fi

                case $@ in
                    *sway*)
                        sway -C && sway reload
                        echo RC:$?
                        ;;
                    *)
                esac

                case $ext in
                    org)
                        emacsclient --eval '(org-babel-execute-maybe)'
                        ;;

                    sh)
                        eval "$1"
                        exit
                        ;;
                    yml|yaml)
                        if grep -- '---' "$1" && grep -- '^- hosts:' "$_"; then
                            runPlay "$1"
                        fi
                        ;;
                    py)
                        python3 "$1"
                        ;;
                    nim)
                        nim c -r --verbosity:0 "$1"
                        ;;
                    rs)
                        PS4='${0}:${LINENO}: '
                        set -o errexit -o xtrace
                        pushd $(mktemp -d)
                        rustc "$1" -o out
                        ./out
                        ;;
                    *)
                esac

            ;;
            *)
                test -x "$1" && grep -q -w -- 'bash' "$1" && eval "$1" && exit 0

                case $ext in
                    sqlite) sqlite3 -line "$1" '.tables' ;;
                    *)
                esac

        esac
        ;;
    *)
esac

case $# in
    [0-1]) eval `# Continue` ;;
    *)
        exit
esac
