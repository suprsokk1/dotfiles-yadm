# alias -- cappd='tmux capture-pane -p -t '\''{down}'\'' | cat --squeeze-blank'  ; alias -- capd='cappd'
# alias -- cappl='tmux capture-pane -p -t '\''{left}'\'' | cat --squeeze-blank'  ; alias -- capl='cappl'
# alias -- cappr='tmux capture-pane -p -t '\''{right}'\'' | cat --squeeze-blank' ; alias -- capr='cappr'
