# -*- mode: snippet -*-
# name: shell-command-on-filename
# type: command
# key: cc
# --
(when-let  (FILENAME (buffer-file-name))
  (let* ((OUTPUT-BUFFER nil)
         (LINE (buffer-substring (bol) (eol)))
         (CMD (format "%s %s"  LINE FILENAME))
         (empty-string (string= CMD "")))
(beginning-of-line)
(kill-line)
(save-excursion
  (unless empty-string
    (async-shell-command CMD )))))