# -*- mode: snippet -*-
# name: shell-command-on-filename
# type: command
# key: cc
# --
(let ((FILENAME (buffer-file-name)))
  (when FILENAME
    (let* ((REPLACE t)
      (OUTPUT-BUFFER nil)
      (LINE (buffer-substring (bol) (eol)))
      (CMD (format "%s %s"  LINE FILENAME)))
  (beginning-of-line)
  (kill-line)
  (save-excursion
  (unless (string= CMD "")
    (shell-command CMD))))))