}

fd() {
    # TODO
    eval "$@"
    return
    # set -x
    files=()
    opts=()
    for var;do
        if test -f "$var" || test -d "$var" || test -L "$var"; then
            files+=( "$var" )
        else
            opts+=( "$var" )
        fi
    done

    case ${#files} in
        1)
            if [[ -d $1 ]]; then
                eval "command fd $opts -- . $files"
            else
                eval "command fd $opts -- $files"
            fi
            ;;
        *)
            eval "$@"
    esac
}

-get-workspace() {
    swaymsg -t get_tree |
        command jq 'recurse(.nodes[]) | select(.nodes[].focused == true)'
}


