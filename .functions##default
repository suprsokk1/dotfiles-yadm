-download-nerd-fonts() {
    curl --silent -- nerdfonts.com/downloads |
        pup 'a[href*="zip"]:contains("Download")' attr{href} |
        xargs env -C /dev/shm curl --retry 2 --verbose --remote-name --progress-bar
}

