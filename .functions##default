_list() {
    -list--functions |
        command env - LC_ALL=C rg --line-buffered -- -list--
}

vpn() {
    case $1 in
        pause|hold|sleep)
            piactl
        ;;
        1|y|on|up)
            piactl connect
        ;;
        0|n|off|down)
            piactl disconnect
            ;;
        *)
    esac
}


