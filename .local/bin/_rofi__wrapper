#!/usr/bin/env sh
set -o nounset -o errexit
. ~/.profile
systemd-run --user notify-send rofi -show drun -modi drun,window,ssh

# notify-send foo
# systemd-run --user notify-send foo

jump rofi                                                    \
    -terminal ${HOME:-~}/.local/bin/_rofi__sensible_terminal \
    -show combi                                              \
    -modes combi,menu:${HOME:-~}/.local/bin/_rofi__menu      \
    -combi-modes drun,window,ssh
