# -*- mode: sh[zsh] -*-
. ~/.profile

EMACS=/usr/bin/emacs-29.1
export EMACS

EDITOR=emacsclient
export EDITOR

ALTERNATE_EDITOR=vim
export ALTERNATE_EDITOR

VISUAL=$EDITOR
export VISUAL

XDG_RUNTIME_DIR=/run/user/${UID:-$(command id -u)}

TERMINAL=screen-256color
export TERMINAL

ZSH=$HOME/src/ohmyzsh
export ZSH

FZF_BASE=$HOME/src/fzf
FZF_DEFAULT_COMMAND='/usr/bin/env --ignore-environment'
FZF_DEFAULT_COMMAND+=' fd'
FZF_DEFAULT_COMMAND+=' --type f'
FZF_DEFAULT_COMMAND+=' --hidden'
FZF_DEFAULT_COMMAND+=' --exclude .git'

# shellcheck disable=SC2089,SC2090
FZF_DEFAULT_OPTS=' --preview='\''_fzf__preview {+}'\'''
FZF_DEFAULT_OPTS+=' --layout=reverse'
FZF_DEFAULT_OPTS+=' --border=none'
FZF_DEFAULT_OPTS+=' --height 10'
FZF_DEFAULT_OPTS+=' --bind ctrl-a:select-all'
FZF_DEFAULT_OPTS+=' --bind ctrl-t:toggle-all'
FZF_DEFAULT_OPTS+=' --bind ctrl-v:toggle-preview'
FZF_DEFAULT_OPTS+=' --query="'
FZF_DEFAULT_OPTS+='"'
FZF_DEFAULT_OPTS+=' --header="'
FZF_DEFAULT_OPTS+='C-a: Mark all C-t: Mark/Unmark all C-v:Hide/Show preview'
FZF_DEFAULT_OPTS+='"'
FZF_DEFAULT_OPTS+=' --prompt="> "'

export FZF_DEFAULT_OPTS

# SUDO_ASKPASS=$HOME/bin/askpass
SUDO_ASKPASS='/usr/bin/systemd-askpass'
export SUDO_ASKPASS

TMPPREFIX=$XDG_RUNTIME_DIR/zsh
export TMPPREFIX

PYTHONSTARTUP=~/.pythonrc
export PYTHONSTARTUP
